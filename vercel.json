{
  "version": 2,
  "builds": [
    {
      "src": "backend.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.11" }
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend.py" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
